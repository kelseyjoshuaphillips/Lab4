@model Lab4.Models.ViewModels.NewsBoardViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewsBoards.First().Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewsBoards.First().Fee)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.NewsBoards) {
            string selectedRow = "";
            if (item.Id.Equals(Convert.ToInt32(ViewData["NewsBoardID"]?.ToString())))
            {
                selectedRow = "success";
            }
            <tr class="@selectedRow">
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fee)
            </td>
            <td>
                <a asp-action="Index" asp-route-id="@item.Id">Select</a> |
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
@if (Model.Clients != null)
{
        <h3>
            Subscribers to the newsboard:
        </h3>
        <table class="table">
            <tr>
            @if (Model.Clients.Count() > 0)
            {
                        <th> Owner </th>
            }
            else
            {
                        <th> No newsboard record exist </th>
            }
            </tr>
        @foreach (var item in Model.Clients)
        {
                    <tr>
                        <td>
                    @item.FullName
                        </td>
                    </tr>
        }
        </table>
}
